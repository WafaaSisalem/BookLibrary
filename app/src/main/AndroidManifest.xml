<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.booklibrary">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/splash_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/splash_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookLibrary">
        <activity
            android:name=".subscreens.EditBookDetailsActivity"
            android:exported="false"
            android:label="Edit book"/>
        <activity
            android:name=".subscreens.BookDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".subscreens.CategoryActivity"
            android:exported="false"
            android:parentActivityName=".mainscreens.LibraryActivity" />
        <activity
            android:name=".mainscreens.CreateBookActivity"
            android:exported="false"
            android:label="Add New Book"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".mainscreens.CreateCategoryActivity"
            android:exported="false"
            android:label="Create New Category"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".mainscreens.FavoriteActivity"
            android:exported="false"
            android:label="Favorite"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".mainscreens.LibraryActivity"
            android:exported="false"
            android:label="Library"
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>